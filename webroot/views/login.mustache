{{>header}}
	<div class="row">
		<div class="col four first leftcol f l t">{{>left}}</div>
		<div class="col push_four twelve last rightcol">

			<h2 class="dmb">Login</h2>

			{{#msg_body}}
			<div class="error pt pb">
				<h3>{{msg_title}}</h3>
				{{{msg_body}}}
			</div>
			{{/msg_body}}

			<form action="/login" method="POST">

				<fieldset>
					<label class="above" for="username">Username</label>
					<input type="text" id="username" name="username" placeholder="Username" />
				</fieldset>

				<fieldset class="mt">
					<label class="above" for="password">Password</label>
					<input type="password" id="password" name="password" placeholder="Password" />
				</fieldset>

				<input type="hidden" name="_csrf" value="{{csrfToken}}">
				<button type="submit" class="dmt">Login</button>
				<a href="/" class="button">Cancel</a>

			</form>

		</div>
	</div>
{{>footer}}
